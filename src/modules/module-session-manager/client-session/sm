#!/bin/sh
if [ -e /sys/class/net/eth0 ]; then
      MAC=$(cat /sys/class/net/eth0/address)
else
      MAC=$(cat /sys/class/net/wlan0/address)
fi
INFO=$(cat /proc/cpuinfo | grep Serial)
RPI=$(echo $INFO | tr " " "\n" | tail -1)
echo $MAC$RPI
/usr/bin/sudo touch /media/BLUEPLAYER/$RPI.txt
printf "blue\t$MAC$RPI\n" | /usr/bin/sudo tee --append /media/BLUEPLAYER/$RPI.txt